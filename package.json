{
  "name": "damm-server",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "cp -r fuzzyfile.json prisma ./dist/",
    "postinstall": "npx prisma migrate deploy && cd client && npm install",
    "start": "node dist/app.js",
    "dev": "nodemon",
    "test": "NODE_ENV=testing mocha -r ts-node/register test/*.ts --exit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dc:up": "docker compose -f .docker/compose/docker-compose-dev.yml up -d postgres pgadmin",
    "dc:down": "docker compose -f .docker/compose/docker-compose-dev.yml down"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "aws-sdk": "^2.921.0",
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.18.2",
    "express-validator": "^6.10.1",
    "http-status-codes": "^2.1.4",
    "jimp": "^0.16.1",
    "json2csv": "^5.0.7",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.1",
    "openid-client": "^5.6.5",
    "path": "^0.12.7",
    "prisma": "^6.19.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/aws-sdk": "^2.7.0",
    "@types/chai": "^4.2.17",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.10",
    "@types/cron": "^2.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.18.2",
    "@types/express-validator": "^3.0.0",
    "@types/jimp": "^0.2.28",
    "@types/json2csv": "^5.0.3",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^18.19.130",
    "@types/node-fetch": "^2.5.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.25.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.8.4",
    "ts-node": "^5.0.1",
    "tslib": "^2.3.1",
    "typescript": "5.4"
  }
}
