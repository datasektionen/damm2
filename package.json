{
    "name": "damm-2.0",
    "version": "1.0.0",
    "author": {
        "name": "Axel Elmarsson",
        "email": "axel.elmarsson@gmail.com"
    },
    "prisma": {
        "schema": "server/prisma/schema.prisma"
    },
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "scripts": {
        "install": "cd server && npm install && cd client && npm install",
        "postinstall": "cd server && npm run build && npx prisma migrate deploy && cd client && npm run build",
        "build": "cd server && npm run build && cd client && npm run build",
        "build:client": "cd server/client && npm run build",
        "build:server": "cd server && npm run build",
        "dev:client": "cd server/client && npm start",
        "dev:server": "cd server && npm run dev",
        "lint": "cd server && npm run lint",
        "lint:fix": "cd server && npm run lint:fix",
        "start": "cd server && npm start"
    },
    "devDependencies": {
        "@types/node": "^16.9.1"
    }
}
